<div class="ms-5 mt-5" style="width: 70rem;">
    <div class="card mb-5">
        {{#with navigation}}
        <nav class="nav m-2">
            {{#each links}}
            <div class="nav-item">
                <a class="nav-link" href="{{href}}">{{text}}</a>
            </div> {{/each}}
            <div class="nav-item"> <a class="nav-link disabled" href="#">Disabled</a></div>
        </nav>
        {{/with}}
    </div>
    <div class="breadcrumb mb-5">
        {{#each breadcrumb}}
        {{#if url}}
        <div class="breadcrumb-item"><a href="{{url}}">{{name}}</a></div>
        {{else}}
        <div class="breadcrumb-item active">{{name}}</div>
        {{/if}}
        {{/each}}
    </div>
    <h1>{{header}}</h1>
    <div class="row mt-5">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>
    <div class="row mt-5">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    {{#with filterBlock}}
                    {{#with sellers}}
                    <p>{{title}}</p>
                    {{#each list}}
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>{{/each}}
                    {{/with}}
                    <hr class="mt-3 mb-3">
                    {{#with brands}}
                    <p>{{title}}</p>
                    {{#with input}}
                    <input type="text" placeholder="{{placeholder}}" class=" form-control mb-3">
                    {{/with}}
                    {{#each options}}
                    <div class="form-check mb-3 ">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                    {{/with}}
                    <hr class="mt-3 mb-3">
                    {{#with price}}
                    <p>{{title}}</p>
                    {{#with range}}
                    <input type="text" placeholder="{{from}}" class=" form-control mb-3">
                    <input type="text" placeholder="{{to}}" class=" form-control mb-3">
                    {{/with}}
                    {{#with button}}
                    <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                    {{/with}}
                    {{/with}}
                    <hr class="mt-4 mb-3">
                    {{#each filterList}}
                    <p>{{title}}</p>
                    {{#each options}}
                    <div class="form-check mb-3 ">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>

                    {{/each}}
                    {{#if @last}}
                    {{else}}
                    <hr class="mt-3 mb-3">
                    {{/if}}
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="row g-5">
                {{#each goodsList}}
                {{> catalogItem}}
                {{/each}}
            </div>
        </div>
    </div>
    {{#with service}}
    <div class="card bg-success text-light text-center mt-5">
        <h2 class="m-3">{{title}}</h2>
        <p class="ms-3">
            {{description}}
        </p>

        {{#each buttons}}
        <div class="m-3">
            <a href="{{link}}" type="button" class="btn btn-primary">{{text}}</a>
        </div>
        {{/each}}

    </div>
    {{/with}}
    <hr class="mt-5 mb-5">
    <footer>
        <div class="row">
            {{#each footer}}
            <div class="col-2">
                {{#each this}}
                <div class="nav nav-flex-column">
                    <div class="nav-item">
                        {{#if @last}} <a href="{{link}}" type="button" class="nav-link disabled">{{text}}</a>
                        {{else}}
                        <a href="{{link}}" type="button" class="nav-link">{{text}}</a>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </footer>
</div>