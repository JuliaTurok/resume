{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true }}
            <div class="mt-4">
                <ul>
                    {{#each works}}
                    <li class="mb-3">
                        <div>{{position}}</div>



                        <div class="mt-3">
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі тут працюємо)
                            {{/if}}
                        </div>



                        <div class="mt-3">
                            {{#if company.url}} {{> link text=company.name href=company.url blank=true noLine=true}}
                        </div>
                        {{else}}
                        <b>{{company.name}}</b>
                        {{/if}}

                        <div class="mt-4 mb-4">
                            <strong> Projects ({{projectAmount}})</strong>
                        </div>

                        <ul>
                            {{#each projects}}
                            <li>

                                <div> {{> link text=name href=url blank=true noLine=true}}</div>

                                <div>
                                    <p>{{about}}</p>
                                </div>

                                <div class="mt-3 mb-3">
                                    <em>Project stacks</em>
                                    ({{stackAmount}})
                                </div>

                                <div>
                                    <ul>
                                        {{#each stacks}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <div class="mt-3 mb-3">
                                    <em>Project awards</em>
                                </div>

                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>

                            </li>
                            {{/each}}
                        </ul>
                    </li>

                    {{/each}}

                </ul>
            </div>
        </section>
    </main>
    {{/with}}


</div>

